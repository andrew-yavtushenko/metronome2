
@import "bootstrap"

iframe
  width: 0
  height: 0
  opacity: 0
  position: absolute
  left: 0
  top: 0
  border: none
  padding: 0
  margin: 0

.patterns
  white-space: nowrap
  overflow-y auto
  -webkit-overflow-scrolling: touch
  border: 1px solid #666
  box-shadow: 0 0 5px #CCC
  padding: 2%
  max-width: 96%
  display: inline-block
  margin: 20px 0

  >li
    display inline-block
    vertical-align top

  .row .col
    float: left
    width: 150px
    padding: 0 15px

.container
  width: 100% !important
  margin: 0 20px
  max-width: 100%
  min-width: 0px

.lines
  padding: 0

.line
  white-space: nowrap
  position relative

.lines li
  background-color: #ccc
  display: inline-block
  height: 20px
  list-style: none
  margin-left: 0px
  box-shadow: #fff 0px 0px 0px 2px inset
  content: ' '
  position: relative
  text-align: center
  font-size: 8px
  line-height: 20px
  vertical-align: middle
  transition: background-color 100ms linear;

  &[note-height='0']
    background-color: #ccc
  &[note-height='0.4']
    background-color: #faa740
  &[note-height='1']
    background-color: #ee6453
  &[is-on='true']
    background-color: #4cb748

  &.subdivision-4
    width: 240px

  &.subdivision-8
    width: 120px

  &.subdivision-12
    width: 80px

  &.subdivision-16
    width: 60px

  &.subdivision-24
    width: 40px

  &.subdivision-32
    width: 30px

  &.subdivision-48
    width: 20px

  &.subdivision-64
    width: 15px

.line-title
  font-size: 9px
  text-transform: uppercase
  font-weight: bold
